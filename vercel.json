{
  "version": 2,
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/assets/$1"
    },
    {
      "src": "/Tabby%20Logo.png",
      "dest": "/frontend/Tabby Logo.png"
    },
    {
      "src": "/Tabby%20Favicon.png",
      "dest": "/frontend/Tabby Favicon.png"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}